{
  "compilerOptions": {
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": false,
    "noEmit": true,
    "jsx": "react-jsx",
    "noFallthroughCasesInSwitch": true,
    "target": "es2019",
    "lib": [
      "es2020"
    ],
    "types": [
      "jest",
      "node"
    ],
    "module": "commonjs",
    "outDir": "../dist"
  },
  "exclude": [
    "server/cache"
  ]
}